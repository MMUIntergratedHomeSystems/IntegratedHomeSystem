<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addNewDeviceButton"
            android:src="@mipmap/ic_add_black_24dp"
            android:background="@null"
            android:layout_marginTop="111dp"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/add_new_device"
            android:layout_alignStart="@+id/add_new_device" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add New Device"
            android:id="@+id/add_new_device"
            android:layout_below="@+id/viewAllDevicesButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewAllDevicesButton"
            android:src="@mipmap/ic_lights_on"
            android:layout_marginLeft="76dp"
            android:layout_marginStart="76dp"
            android:background="@null"
            android:layout_alignTop="@+id/addNewDeviceButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="All Devices"
            android:id="@+id/textAllDevices"

            android:layout_below="@+id/viewAllDevicesButton"
            android:layout_alignRight="@+id/viewAllDevicesButton"
            android:layout_alignEnd="@+id/viewAllDevicesButton" />

    </RelativeLayout>
</LinearLayout>